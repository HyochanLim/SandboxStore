<%- include("../shared/includes/head", { pageTitle: "Sign Up" }) %>
<link rel="stylesheet" href="/styles/base.css">
<link rel="stylesheet" href="/styles/forms.css">
<link rel="stylesheet" href="/styles/auth.css">
</head>
<body>
    <%- include("../shared/includes/header") %>
    <main>
        <h1>Create new account</h1>
        <% if (sessionData.errorMessage) { %>
            <section class="alert">
                <h2>Invalid input!</h2>
                <p><%= sessionData.errorMessage %></p>
            </section>
        <% } %>
        <form class="auth-form" action="/signup" method="POST">
            <input type="hidden" name="_csrf" value="<%= csrfToken %>">
            <p>
                <label for="email">Email</label>
                <input type="email" id="email" name="email" value="<%= sessionData.email %>" required>
            </p>
            <p>
                <label for="confirm-email">Confirm Email</label>
                <input type="email" id="confirm-email" name="confirm-email" value="<%= sessionData.confirmEmail %>" required>
            </p>
            <p>
                <label for="password">Password</label>
                <input type="password" id="password" name="password" minlength="6" required>
            </p>
            <hr>
            <p>
                <label for="full-name">Full Name</label>
                <input type="text" id="full-name" name="full-name" value="<%= sessionData.fullName %>" required>
            </p>
            <p>
                <label for="street">Street</label>
                <input type="text" id="street" name="street" value="<%= sessionData.street %>" required>
            </p>
            <p>
                <label for="postal-code">Postal Code</label>
                <input type="text" id="postal" name="postal" value="<%= sessionData.postal %>" required>
            </p>
            <p>
                <label for="city">City</label>
                <input type="text" id="city" name="city" value="<%= sessionData.city %>" required>
            </p>
            <button class="btn">Create Account</button>
            <p id="switch-form"><a href="/login">Login instead</a></p>
        </form>
    </main>
    <%- include("../shared/includes/footer") %>